= form_for(@category) do |f|
  -if @category.errors.any?
    .error_explanation
      %h2
      Kategoria nie może być dodana:

      %ul
      -@category.errors.full_messages.each do |msg|
        %li= msg

  .field
    %br
    = f.label :name, 'Nazwa'
    = f.text_field :name
    
  -if((current_user != nil) and (current_user.is_admin == true))   
    .actions
      = f.submit "Utwórz kategorie"
  